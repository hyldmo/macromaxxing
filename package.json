{
	"name": "macromaxxing",
	"packageManager": "yarn@4.12.0",
	"type": "module",
	"workspaces": [
		"packages/*",
		"workers"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/hyldmo/macromaxxing.git"
	},
	"scripts": {
		"dev": "concurrently -k -c 'green,#CA7B38' 'yarn:dev:*'",
		"dev:web": "vite",
		"dev:api": "yarn workspace @macromaxxing/workers wrangler pages dev --d1=macromaxxing --port=8788 --live-reload",
		"build": "vite build",
		"codegen": "yarn workspace @macromaxxing/workers wrangler types",
		"fix": "biome check . --fix --unsafe",
		"lint": "biome check .",
		"format": "biome format --write .",
		"db:generate": "yarn workspace @macromaxxing/db drizzle-kit generate",
		"db:migrate": "yarn workspace @macromaxxing/workers wrangler d1 migrations apply macromaxxing --local"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^3.0.36",
		"@ai-sdk/google": "^3.0.21",
		"@ai-sdk/openai": "^3.0.25",
		"@macromaxxing/db": "workspace:*",
		"@tanstack/react-query": "^5.90.20",
		"@trpc/client": "^11.9.0",
		"@trpc/react-query": "^11.9.0",
		"@trpc/server": "^11.9.0",
		"ai": "^6.0.71",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"es-toolkit": "^1.44.0",
		"lucide-react": "^0.563.0",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"react-router-dom": "^7.13.0",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@j178/prek": "^0.3.1",
		"@tailwindcss/vite": "^4.1.18",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.3",
		"concurrently": "^9.2.1",
		"semantic-release": "^25.0.3",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	}
}
