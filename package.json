{
  "name": "macromaxxing",
  "packageManager": "yarn@4.12.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "workers"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hyldmo/macromaxxing.git"
  },
  "scripts": {
    "dev": "concurrently -k -c 'green,#CA7B38,#C5F74F' 'yarn:dev:*'",
    "dev:web": "vite",
    "dev:api": "yarn workspace @macromaxxing/workers dev",
    "dev:db": "yarn workspace @macromaxxing/db dev",
    "build": "vite build",
    "typecheck": "concurrently 'yarn:typecheck:*'",
    "typecheck:app": "tsc",
    "typecheck:scripts": "tsc -p tsconfig.node.json",
    "typecheck:packages": "yarn workspaces foreach --all --exclude macromaxxing --parallel run typecheck",
    "codegen": "yarn workspace @macromaxxing/workers wrangler types",
    "fix": "biome check . --fix --unsafe",
    "lint": "biome check .",
    "format": "biome format --write .",
    "db:generate": "yarn workspace @macromaxxing/db drizzle-kit generate",
    "db:migrate": "yarn workspace @macromaxxing/workers wrangler d1 migrations apply macromaxxing --local",
    "db:seed": "yarn db:migrate && yarn workspace @macromaxxing/workers wrangler d1 execute macromaxxing --local --file=scripts/seed.sql",
    "db:seed:usda": "node --experimental-transform-types scripts/seed-usda.ts",
    "db:seed:generate": "node --experimental-transform-types scripts/seed.ts",
    "db:copy-to-prod": "node --experimental-transform-types scripts/copy-to-prod.ts",
    "test": "vitest run",
    "pwa:generate-icons": "pwa-assets-generator --preset minimal-2023 public/favicon.svg",
    "postinstall": "prek install && prek install --hook-type commit-msg"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.36",
    "@ai-sdk/google": "^3.0.21",
    "@ai-sdk/openai": "^3.0.25",
    "@clerk/clerk-react": "^5.60.0",
    "@clerk/themes": "^2.4.51",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hyldmo/by": "^1.1.0",
    "@macromaxxing/db": "workspace:*",
    "@mdxeditor/editor": "^3.52.3",
    "@tanstack/query-persist-client-core": "^5.91.19",
    "@tanstack/react-query": "^5.90.20",
    "@trpc/client": "^11.9.0",
    "@trpc/react-query": "^11.9.0",
    "@trpc/server": "^11.9.0",
    "ai": "^6.0.71",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "es-toolkit": "^1.44.0",
    "html5-qrcode": "^2.3.8",
    "idb-keyval": "^6.2.2",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0",
    "ts-extras": "^0.17.0",
    "vite-plugin-pwa": "^1.2.0",
    "zod": "^4.3.6"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@j178/prek": "^0.3.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "semantic-release": "^25.0.3",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "type-fest": "^5.4.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
