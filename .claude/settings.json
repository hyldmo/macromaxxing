{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"plansDirectory": ".claude/plans",
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/hooks/save-learnings-reminder.sh"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": "yarn fix"
					}
				]
			}
		]
	}
}
